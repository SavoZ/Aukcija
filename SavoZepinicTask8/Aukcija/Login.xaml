<Window x:Class="Aukcija.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="                      LOGIN " HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="292" FontWeight="Bold" FontSize="18"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Width="76" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="26" Margin="111,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontWeight="Bold" FontSize="14"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="76" FontWeight="Bold"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="26" Margin="111,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontWeight="Bold" FontSize="14"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="55,190,0,0" VerticalAlignment="Top" Width="75" Click="Button_Login" Height="25" FontWeight="Bold" FontSize="14"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="188,190,0,0" VerticalAlignment="Top" Width="75" Click="Button_Cancel" Height="25" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
